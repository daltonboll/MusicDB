<p id="notice"><%= notice %></p>

<h1>All Artists</h1>

<table id="artists-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Popularity</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Race</th>
      <th>Debut Year</th>
      <th>Label</th>
      <th>Awards</th>
      <th>Associated Genres</th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr class="clickable-row" data-href="<%= artist_url(artist) %>">
        <td><%= artist.get_truncated_name %></td>
        <td><%= artist.popularity %></td>
        <td><%= artist.age %></td>
        <td><%= artist.gender %></td>
        <td><%= artist.race %> </td>
        <td><%= artist.debutYear %></td>
        <td><%= artist.label.name %></td>
        <td><%= artist.awards.size %></td>
        <td><%= artist.get_genres %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Artist', new_artist_path %>
