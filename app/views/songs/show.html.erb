<p id="notice"><%= notice %></p>

<h1>Song: <%= @song.title %> by <%= link_to(@song.artist.name, artist_url(@song.artist)) %></h1>

<div class="album-images">
    <img class="album-image" src="<%= @song.album.images.first %>"/>
</div>

<h2>Basic Info</h2>
<p>
  <strong>Popularity:</strong>
  <%= @song.get_popularity %>
</p>

<p>
  <strong>Billboard Hot 100 Peak:</strong>
  <%= @song.billboardHot100Peak %>
</p>

<p>
  <strong>Spotify Streams:</strong>
  <%= @song.spotifyStreams %>
</p>

<p>
  <strong>Sales:</strong>
  <%= @song.amountSold %>
</p>

<p>
  <strong>Radio Play Peak:</strong>
  <%= @song.radioPlayPeak %>
</p>

<p>
  <strong>Album Title:</strong>
  <%= link_to(@song.album.title, @song.album) %>
</p>

<p>
  <strong>Release Date:</strong>
  <%= @song.album.get_release_date %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @song.get_duration %>
</p>

<p>
  <strong>Track Number:</strong>
  <%= @song.get_track_number %>
</p>

<p>
  <strong>Explicit?</strong>
  <%= @song.get_explicit %>
</p>

<p>
  <strong>Single?</strong>
  <%= @song.get_is_single %>
</p>

<p>
  <strong>Has a Music Video?</strong>
  <%= @song.get_has_music_video %>
</p>

<p>
  <strong>Disc Number:</strong>
  <%= @song.get_disc_number %>
</p>

<p>
  <strong>Spotify ID:</strong>
  <%= link_to(@song.get_spotify_id, @song.get_spotify_url, target: "_blank") %>
</p>

<%= link_to 'Edit This Song', edit_song_path(@song) %> |
<%= link_to 'Back', songs_path %>
