<p id="notice"><%= notice %></p>

<h1>All Labels</h1>

<table id="labels-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Number of Artists</th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr class="clickable-row" data-href="<%= label_url(label) %>">
        <td><%= label.name %></td>
        <td><%= label.location %></td>
        <td><%= label.artists.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Label', new_label_path %>
