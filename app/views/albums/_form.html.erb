<%= form_for(@album) do |f| %>
  <% if @album.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@album.errors.count, "error") %> prohibited this album from being saved:</h2>

      <ul>
      <% @album.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: :styled_input %>
  </div>
  <div class="field">
    <%= f.label "Release Date" %><br>
    <%= f.text_field :releaseDate, class: :styled_input %>
  </div>
  <div class="field">
    <%= f.label "Genres (of the form genre1, genre2, genre3)" %><br>
    <%= f.text_field :genres, class: :styled_input %>
  </div>
  <div class="field">
    <%= f.label :popularity %><br>
    <%= f.number_field :popularity, class: :styled_input %>
  </div>
  <div class="field">
    <%= f.label "Album Type" %><br>
    <%= f.text_field :albumType, class: :styled_input %>
  </div>
  <div class="field">
    <%= f.label "Spotify ID" %><br>
    <%= f.text_field :spotifyID, class: :styled_input %>
  </div>
  <div class="field">
    <%= f.label "Artist" %><br>
    <%= select_tag(:artist, options_for_select(Artist.get_select_field_list(), @album.get_artist_id), class: :styled_input) %>
  </div>
  <div class="actions">
    <%= f.submit(class: "pretty_button") %>
  </div>
<% end %>
