<p id="notice"><%= notice %></p>

<h1>All Albums</h1>

<table id="albums-table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Popularity</th>
      <th>Release Date</th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr class="clickable-row" data-href="<%= album_url(album) %>">
        <td><%= link_to(album.get_truncated_title, album_url(album)) %></td>
        <td><%= link_to(album.artist.name, artist_url(album.artist)) %></td>
        <td><%= album.get_popularity %></td>
        <td><%= album.get_release_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Album', new_album_path %>
