<p id="notice"><%= notice %></p>

<h1>Listing Albums</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Releasedate</th>
      <th>Genre</th>
      <th>Amountsold</th>
      <th>Billboard200peak</th>
      <th>Numberofsingles</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.releaseDate %></td>
        <td><%= album.genre %></td>
        <td><%= album.amountSold %></td>
        <td><%= album.billboard200Peak %></td>
        <td><%= album.numberOfSingles %></td>
        <td><%= link_to 'Show', album %></td>
        <td><%= link_to 'Edit', edit_album_path(album) %></td>
        <td><%= link_to 'Destroy', album, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

